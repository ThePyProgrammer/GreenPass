<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Profile">
        <Preference
            app:title="Edit Image"
            app:key="image"
            app:summary="Click to edit profile picture"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="Opening Pass">

        <SwitchPreferenceCompat
            app:key="shake"
            app:defaultValue="true"
            app:title="Shake to open pass" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Theme">

        <SwitchPreferenceCompat
            app:key="theme"
            app:defaultValue="false"
            app:title="Dark Theme (Beta)" />

    </PreferenceCategory>

    <!--



    -->

</PreferenceScreen>